= form_for @doc, html: { class: "form-horizontal", role: "form" } do |f|
  -if @doc.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@doc.errors.count, "error")} prohibited this doc from being saved:"

      %ul
        - @doc.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title, "Give your What's Up Doc a title", class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :title, class: 'form-control', placeholder: '"Life goals", "Joe\'s Ventures", etc'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
